ngix_redirect_to_https = (name, http_port=8080) ->
  '/etc/nginx/conf.d/app.conf':
    content: @Join '\n', [
      "server {"
      "    listen   ${http_port};"
      "    server_name {{server_name}};"
      "    return 301 https://$server_name$request_uri;"
      "}"
    ]
    context:
      server_name: name
      # server_name: @Join '', [
      #   @Params.DnsZone
      # ]
    mode: '000755'
    owner: 'root'
    group: 'root'